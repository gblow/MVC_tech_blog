
<article class="new-page">
    <section class="edit-form-page">
        <div class="form-heading">
            <h2>
                Edit Post
            </h2>
        </div>
        <div class="form-section">
            <form class="edit-post-form">
                <div class="post-title-section">
                    <label for="post-title">Title</label>
                    <input type="text" name="post-title" id="post-title" value="{{post.title}}" />
                </div>
                <div class="post-text">
                    <label for="post-text">Text</label>
                    <textarea class="entry-field" id="post-text" name="post-text">{{post.text}}</textarea>
                </div>
                <button type="submit">Remove post</button>
                <button type="button" class="delete-post-btn">Edit Post</button>
            </form>
        </div>
    </section>
</article>

<script src="/build/edit-post.js"></script>
<script src="/build/delete-post.js"></script>
